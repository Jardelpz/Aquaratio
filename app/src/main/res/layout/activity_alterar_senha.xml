<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/barrasuperior" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Alterar Senha"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edSenhaAtual"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:text="Atual:"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edSenhaAtual"
        android:layout_width="254dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="91dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#000" />

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="1dp"
        android:layout_below="@+id/edSenhaAtual"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:focusable="false" />


    <TextView
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edSenhaNova"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Nova Senha:"
        android:textColor="#000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edSenhaNova"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edSenhaAtual"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-17dp"
        android:layout_marginTop="140dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#000" />

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="1dp"
        android:layout_below="@+id/edSenhaNova"
        android:layout_centerHorizontal="true"
        android:background="#000000"
        android:focusable="false" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edConfSenhaNova"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Confirmar:"
        android:textColor="#000"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/edConfSenhaNova"
        android:layout_width="222dp"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/edSenhaAtual"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-20dp"
        android:layout_marginTop="199dp"
        android:inputType="textPassword"
        android:textColor="#000" />

    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="1dp"
        android:layout_below="@+id/edConfSenhaNova"
        android:layout_centerHorizontal="true"
        android:background="#000"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="263dp"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/btAlterarSenha"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#C0C0C0"
            android:onClick="alterarSenha"
            android:text="Alterar"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18dp" />

    </LinearLayout>


</RelativeLayout>